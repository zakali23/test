{% extends "admin/base_admin.html.twig"%}
{% block body %}
    <h1>Bridget</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bridget.id }}</td>
            </tr>
            <tr>
                <th>Serialnumber</th>
                <td>{{ bridget.serialNumber }}</td>
            </tr>
            <tr>
                <th>Dateinstallation</th>
                <td>{% if bridget.dateInstallation %}{{ bridget.dateInstallation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Dateachat</th>
                <td>{% if bridget.dateAchat %}{{ bridget.dateAchat|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bridget_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('bridget_edit', { 'id': bridget.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
